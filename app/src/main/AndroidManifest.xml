<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Newsapi"
        tools:targetApi="31">
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.NewsSourcesActivity" />

        <activity
            android:name=".view.NewsArticleActivity"
            android:exported="false"
            android:label="@string/title_activity_news_article"
            android:parentActivityName=".view.NewsSourcesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.NewsSourcesActivity" />
        </activity>

        <activity android:name=".view.NewsArticleDetailsActivity" />


    </application>

</manifest>